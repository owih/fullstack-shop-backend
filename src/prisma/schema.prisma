generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int    @id @unique @default(autoincrement())
  email       String @unique
  password    String
  role        Role   @default(USER)
  cartId      Int
  favoritesId Int
}

enum Role {
  USER
  ADMIN
}

model Product {
  id          Int                  @id @unique @default(autoincrement())
  name        String               @unique
  type        ProductOnType[]
  price       Int
  sale        Int
  description String
  stock       Int
  image       ProductImage[]
  cart        ProductOnCart[]
  favorites   ProductOnFavorites[]
}

model ProductImage {
  id        Int     @id @unique @default(autoincrement())
  product   Product @relation(fields: [productId], references: [id])
  productId Int
  name      String
  url       String  @unique
}

model ProductType {
  id       Int             @id @unique @default(autoincrement())
  name     String          @unique
  products ProductOnType[]
}

model Cart {
  id       Int             @id @unique @default(autoincrement())
  products ProductOnCart[]
}

model Favorites {
  id       Int                  @id @unique @default(autoincrement())
  products ProductOnFavorites[]
}

model ProductOnType {
  type       ProductType @relation(fields: [typeId], references: [id])
  typeId     Int
  product    Product     @relation(fields: [productId], references: [id])
  productId  Int
  assignedAt DateTime    @default(now())
  assignedBy String

  @@id([typeId, productId])
}

model ProductOnCart {
  count      Int      @default(1)
  cart       Cart     @relation(fields: [cartId], references: [id])
  cartId     Int
  product    Product  @relation(fields: [productId], references: [id])
  productId  Int
  assignedAt DateTime @default(now())
  assignedBy String

  @@id([cartId, productId])
}

model ProductOnFavorites {
  favorites   Favorites @relation(fields: [favoritesId], references: [id])
  favoritesId Int
  product     Product   @relation(fields: [productId], references: [id])
  productId   Int
  assignedAt  DateTime  @default(now())
  assignedBy  String

  @@id([favoritesId, productId])
}
